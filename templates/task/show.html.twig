{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block session_title %}Do you want to deleteL {{ task.name }}?{% endblock %}
{% block session_action_name %}back to list{% endblock %}
{% block session_action_href %}{{ path('task_index') }}{% endblock %}

{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ task.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                    {% if task.status %}
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-check-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                            <path fill-rule="evenodd" d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z"></path>
                        </svg>
                    {% else %}
                        <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"></path>
                        </svg>
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>
{#    <a href="{{ path('task_edit', {'id': task.id}) }}">edit</a>#}

    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="collapse navbar-collapse">
            <div class="navbar-nav mr-auto">
                <li class="nav-item"></li>
            </div>

            <ul class="navbar-nav">
                <li class="nav-item">
                    {{ include('task/_delete_form.html.twig') }}
                </li>
            </ul>
        </div>
    </nav>
{% endblock %}
